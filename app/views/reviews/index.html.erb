<div class='container pt-3'>

    <%= link_to "< Back", :back, class: "muted mt-5" %>


  <div class="row">
    <div class="col-5">
      <div class="card-account card-template flex-column">
        <div class='img mx-auto'>
          <%= avatar(current_user, "avatar-xlg") %>
        </div>
        <p class='subheading mx-auto'><%= @user.name %></p>
        <div class='reviews-skill mt-3'>
          <p class='subheading'>Skills: </p>
          <% @skill_array.each do |skill| %>
            <span class='card-tag'><strong><%= skill.name %></strong></span>
          <% end %>
          <div class='avg-rate d-flex mt-3'>
            <p>Average: <%= @review_array.average(:rating)%>‚≠ê</p>
            <p class='muted'>Count: (<%= @review_array.length %> reviews)</p>
          </div>
        </div>

      </div>
    </div>

    <div class="col-7">
      <p class='subheading'>Bio</p>
      <div class="card-account card-template">
        <%= @bio.content %>
      </div>

      <p class='subheading mt-3'>Reviews</p>
      <div class="card-account card-template flex-column mt-2">
        <% @review_array.each do |review| %>
          <li><%= review.content %>
          <p>Rating: <%= review.rating %>/5</p></li>
        <% end %>
      </div>

    </div>

  </div>

  <div class="row">
  
  </div>
  
</div>








