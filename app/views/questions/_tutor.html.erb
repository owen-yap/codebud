<div class="col-7 pt-5 pl-4">
  <h2 class="subheading">Answer a question</h2>
  <form class="question-form mb-3">
    <label for="search" class="gray">Filter: Add a language / Framework / Topic: </label>
    <input type="text" name="search">
  </form>
  <% @all_questions.each do |question| %>
    <div class="card-template question mb-2">
      <div class="info">
        <h6 class="title mb-2"><%= question.title %> </h6>
          <div class="tags">
            <% question.skills.each do |skill| %>
              <p class="card-tag"> <%= skill.name %> </p>
            <% end %>
          </div>
      </div>
      <%= link_to "Apply", question_path(question), class: "btn fat-btn" %>
    </div>
  <% end %>
  <h2 class="subheading">Questions Applied</h2>
  <div class='card-template card-questions mt-3 mb-3'>
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" alt="IMG HERE" width='81' height='81'>
    <p class='muted'>No questions applied. Apply for a question now.</p>
  </div>
</div>